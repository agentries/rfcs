{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agentries.dev/conformance/2026-02-07-draft-v1/interop-report.schema.json",
  "title": "AMP Interop Report",
  "type": "object",
  "required": [
    "suite_version",
    "implementation",
    "run",
    "results"
  ],
  "properties": {
    "suite_version": {
      "type": "string",
      "const": "2026-02-07-draft-v1"
    },
    "implementation": {
      "type": "object",
      "required": ["id", "version"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "minLength": 1 },
        "repository": { "type": "string" },
        "commit": { "type": "string" }
      },
      "additionalProperties": false
    },
    "run": {
      "type": "object",
      "required": ["executed_at", "environment"],
      "properties": {
        "executed_at": { "type": "string" },
        "environment": {
          "type": "object",
          "required": ["os", "arch", "runtime"],
          "properties": {
            "os": { "type": "string" },
            "arch": { "type": "string" },
            "runtime": { "type": "string" },
            "notes": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "results": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["vector_id", "status"],
        "properties": {
          "vector_id": { "type": "string", "minLength": 1 },
          "status": { "type": "string", "enum": ["pass", "fail", "skip"] },
          "notes": { "type": "string" },
          "evidence_ref": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
